<div class="boxes_big">
  <div class="boxes">

    <table class="center">
      <form method="post" action="/stocks">
        
        <tr>
          <th>Game</th>
          <th></th>
          <th>Platform</th>
          <th></th>
          <th>Cost Price</th>
          <th></th>
          <th>Sell Price</th>
          <th></th>
          <th>Quantity</th>
        </tr>
        <tr>
        <td><select id="select-game" name="game_id">
              <% for game in @games %>
              <option value = "<%= game.id %>"><%= game.name %></option>
              <% end %>
            </select></td>
          <td>|</td>
          <td><select id="select-platform" name="platform_id">
              <% for platform in @platforms %>
              <option value = "<%= platform.id %>"><%= platform.name %></option>
              <% end %>  
            </select></td>
          <td>|</td>
          <td>£<input type="number" step="0.01" min="0" name="cost_price"></td>
          <td>|</td>
          <td>£<input type="number" step="0.01" min="0" name="sell_price"></td>
          <td>|</td>
          <td><input type="number" name="quantity" min="0">
          </td>
        </tr>
        <tr>
          <td>
            <input class="btn" type="submit" value="Add Stock">
          </td>
        </tr>
      </form>
    </table>
  </div>
</div>